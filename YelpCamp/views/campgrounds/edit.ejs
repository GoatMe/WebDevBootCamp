<%- include ("../partials/header")%>

<div class="container">
		<h1>Edit <%= cg.name%></h1>
	<div class="row">
		<form action="/campgrounds/<%=cg._id%>?_method=PUT" method="POST">
			<div class="form-group col-auto">
				<input class="form-control" type="text" name= "campground[name]" value="<%= cg.name%>">
			</div>
			<div class="form-group col-auto">
				<input class="form-control" type="text" name= "campground[img]" value="<%= cg.img%>">
			</div>
			<div class="form-group col-auto">
				<input class="form-control" type="number" name= "campground[price]" placeholder="price" min="0.00" step="0.01">
			</div>
			<div class="form-group col-auto">
				<input class="form-control" type="text" name= "campground[desc]" value="<%= cg.desc%>">
			</div>
			<div class="form-group col-auto">
				<button class="btn btn-md btn-outline-primary btn-block">Submit</button>
			</div>
		</form>

	</div>
		<a href="/campgrounds">Go Back</a>
</div>

<%- include ("../partials/footer")%>