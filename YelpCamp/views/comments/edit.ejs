<%- include ("../partials/header")%>
<div class="container">
		<h1>Edit Comment</h1>
	<div class="row">
		<form action="/campgrounds/<%= cg_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
			<div class="form-group col-auto">
				<input class="form-control" type="text" name= "comment[text]" value="<%=comment.text%>">
			</div>
			<div class="form-group col-auto">
				<button class="btn btn-md btn-outline-primary btn-block">Submit</button>
			</div>
		</form>

	</div>
		<a href="/campgrounds">Go Back</a>
</div>

