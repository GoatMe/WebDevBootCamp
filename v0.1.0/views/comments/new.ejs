<%- include ("../partials/header")%>
<div class="container">
		<h1>Create a New Comment to <%= cg.name%></h1>
	<div class="row">
		<form action="/campgrounds/<%= cg._id%>/comments" method="POST">
			<div class="form-group col-auto">
				<input class="form-control" type="text" name= "comment[text]" placeholder="Comment">
			</div>
			<div class="form-group col-auto">
				<input class="form-control" type="text" name= "comment[author]" placeholder="Author">
			</div>
			<div class="form-group col-auto">
				<button class="btn btn-md btn-outline-primary btn-block">Submit</button>
			</div>
		</form>

	</div>
		<a href="/campgrounds">Go Back</a>
</div>

<%- include ("../partials/footer")%>